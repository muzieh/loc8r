extends layout
include _includes/sharedHTMLfunctions
    
block content
    .row.banner
        .col-12
            h1= location.name 
    .row
        .col-12.col-lg-9
            .row
                .col-12.col-md-6
                    p.rating
                        +outputRating(location.rating)
                    p= location.address 
                    .card.card-primary
                        .card-block
                            h2.card-title Opening hours
                            each opening in location.opening
                                if opening.closed
                                    p.card-text #{opening.days} : closed
                                else
                                    p.card-text #{opening.days} : #{opening.opening} - #{opening.closing}
                    .card.card-primary
                        .card-block
                            h2.card-title Facilities
                            each facility in location.facilities
                                span.badge.badge-warning
                                    i.fa.fa-check
                                    | &nbsp;#{facility}
                                | &nbsp;
                .col-12.col-md-6.location-map
                    .card.card-primary
                        .card-block
                            h2.card-title Location map
                            img.img-fluid.rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=#{location.coords.lat},#{location.coords.lng}&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2&key=AIzaSyA3ndyhSkWdGVTwgTFasFm9OKuKXMFKxho')
            .row
                .col-12
                    .card.card-primary.review-card
                        .card-block
                            a.btn.btn-primary.float-right(href='/location/review/new') Add review
                            h2.card-title Customer reviews
                            each review in reviews
                                .row.review
                                    .col-12.no-guters.review-header
                                        span.rating
                                            +outputRating(review.rating)
                                        span.reviewAuthor= review.author 
                                        small.reviewTimestamp= review.createdOn
                                    .col-12
                                        p= review.reviewText
                                
        .col-12.col-lg-3
            p.lead= sideText.line1
            p= sideText.line2
